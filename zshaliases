# Last edit on 2010-03-12
# This file is a part of my zsh configuration. It's sourced from the .zshrc
# file. It contains my aliases

# Just for fun :)
alias top10='print -l $$${(o)history%% *} | uniq -c | sort -nr | head -n 10'

alias psg='ps ax|grep -v grep|grep -i'
alias h='history'
alias hg='history 1|grep'
alias zeit="date +\"%H:%M %d.%m.%y\""
alias today="date +\"%Y%m%d\""
alias fspc='df -h .'

if (( EUID != 0 )); then
    alias shutdown='sudo shutdown'
    if [[ -x `which iwconfig` ]]; then
        alias iwconfig='sudo iwcofing'
    fi
fi

# Linux specific aliases
if [[  $(uname -s)  = 'Linux' ]] then
    alias ls='ls -F --color'
    alias grep='grep --color'
else 
    alias ls='ls -F'
fi

alias ll='ls -lh'
alias la='ls -Alh'
alias lad='ls -d -- .*(/)'  # only show dot-direcotories
alias laf='ls -d -- .*(^/)' # only show dot-files
alias lsd='ls -d -- *(/)'   # show all directories
alias lsf='ls -d -- *(^/)'  # only show files
alias lse='ls -d -- *(/^F)' # only show empty dirs

# Gentoo specific aliases
if [[ -e /etc/gentoo-release ]]; then
    if (( EUID != 0 )); then
        alias etc-update='sudo etc-update'
        alias eix-sync='sudo eix-sync'
        alias cal='cal -m'
        alias revdep-rebuild='sudo revdep-rebuild'
    fi
    alias genup='emerge -avuNDt --keep-going world'
fi

if [[ -e /etc/debian_version ]]; then
    if (( EUID != 0 )); then
        alias apt-get='sudo apt-get'
        alias dpkg='sudo dpkg'
        alias dpkg-reconfigure='sudo dpkg-reconfigure'
        alias debup='aptitude update && aptitude safe-upgrade'
        alias debup_old='aptitude update && aptitude upgrade'
    else 
        alias debup='sudo -i "aptitude update && aptitude safe-upgrade"'
    fi
    
    alias apt-search='apt-cache search'
fi

if [[ -x `which vim` ]]; then
    alias vi='vim -p'
    alias vi='vim -p'
    alias vim='vim -p'
alias view='vim -R'
elif [[ -x `which vi` ]]; then
    alias vim='vi'
fi

alias 'cd..'='cd ../'
alias 'cd...'='cd ../../'
alias 'cd....'='cd ../../../'

if [[ -x `which links2` ]]; then
    LINKS_BROWSER="links2"
elif [[ -x `which links` ]]; then
    LINKS_BROWSER="links"
elif [[ -x `which lynx` ]]; then
    LINKS_BROWSER="lynx"
fi

alias myip=$LINKS_BROWSER' -dump http://www.myip.ch/ | grep -o "[[:digit:]].*[[:digit:]]"'

# some config shortcuts
alias confighelp='./configure --help=short'
alias configmake='./configure && make'

# Suffix aliases
alias -s pdf=evince
alias -s ps=evince
alias -s {flac,wav,wmv,mpg,avi,mpeg,ogm,m4v,mp4,mkv,ogg}='mplayer -idx'
alias -s {jpg,jpeg,xpm,xbm,png,gif}='feh'
if [[ -x `which vimpager` ]]; then 
    alias -s txt=vimpager
else
    alias -s txt=$PAGER
fi

if [[ -x `which firefox` ]]; then
    alias -s html=firefox
else 
    alias -s html=$LINKS_BROWSER
fi

if [[ -x `which vim` || -x `which vi` ]]; then
    alias -s tex=vim
    alias -s php=vim
    alias -s java=vim
    alias -s pl=vim
    alias -s py=vim
fi


# Global alias
alias -g NE='2>|/dev/null'
alias -g NO='&>|/dev/null'

alias -g PG='|$PAGER'

if [[ -x `which vimpager` ]]; then
    alias -g VP='|vimpager'
fi

alias -g st010='st010.kalkin.de'
alias -g BLASE='blase16.is-a-geek.org'

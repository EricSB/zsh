# Last edit on 2008-02-25 
# This file is a part of my zsh configuration. It's sourced from the .zshrc
# file. It contains my key bindings

bindkey -v

# History completion on pgup and pgdown
zle -N history-beginning-search-backward-end history-search-end
zle -N history-beginning-search-forward-end history-search-end

case $HOST in
    st010*)
        bindkey "^[[1~" beginning-of-line
        bindkey "^[OF~" end-of-line # [[4~ seems not always to work no idea y
        ;;
      *)
        bindkey "^[[1~" beginning-of-line
        bindkey "^[[4~" end-of-line
        ;;
esac

bindkey "^[[5~" history-beginning-search-backward-end
bindkey "^[[6~" history-beginning-search-forward-end

bindkey "\e[3~" delete-char    # "Entf" or "Del"
bindkey "^[[2;5~" insert-last-word  # STRG+Einfg
bindkey "^B" backward-word    # One word back
bindkey "^X" forward-word    # One word forward
bindkey "^W" backward-delete-word    # "Entf" or "Del"
bindkey "^R" history-incremental-search-backward # Search in my $HISTFILE (STRG+R)
bindkey "^P" quote-line      # quote the whole line
bindkey "^K" run-help #  i. e. "run-help foo" == "man foo"
bindkey -s "\C-t" "dirs -v\r" 

run-with-sudo () { LBUFFER="sudo $LBUFFER" }
zle -N run-with-sudo
bindkey '^N' run-with-sudo

bindkey -v  #vi keybindings

# Last edit on 2008-03-14
# This file is a part of my zsh configuration. It's sourced from the .zshrc
# file. It contains the exported shell variables

# (( ${+*} )) = if variable is set don't set it anymore
(( ${+ORGANIZATION} )) || export ORGANIZATION="cologne.idle"
(( ${+IRCNAME} ))  || export IRCNAME="Kalkin Sam"
(( ${+IRCNICK} ))  || export IRCNICK="kalkin-"
(( $$${+OS} )) || export OS="${OSTYPE%%[0-9.]*}"  


PATH="/bin:/usr/local/bin:/usr/bin:/usr/local/sbin:/sbin:/usr/sbin"

if [[ -d $HOME/bin ]]; then
    PATH=$PATH:$HOME/bin
fi

if [[ -d "/usr/kde/3.5/bin/" ]]; then
    PATH=$PATH:/usr/kde/3.5/bin/
fi

# MORE GAMEZ!1!
if [[ -d "/usr/games/bin" ]]; then
    PATH=$PATH":/usr/games/bin"
fi

# Sometimes needed for pear
if [[ -d /usr/share/php/bin/ ]]; then
    PATH=$PATH:/usr/share/php/bin/
fi

# Test if we have Latex
if [[ -d /usr/local/texlive/2008/bin/x86_64-linux/ ]]; then
    PATH=$PATH:/usr/local/texlive/2008/bin/x86_64-linux/
fi

# Only needed for {Free,Open}BSD
if [ -d "/usr/ports" ]; then
    export PORTS_DIR="/usr/ports"
fi

path=($^path(/FN))
export PATH

export DISPLAY=:0.0
export MANWIDH=80
export LESSCHARSET=utf-8
export TERM=rxvt
export GIT_PAGER=vimpager

if [[ -x `where vim` ]]; then
    export EDITOR=vim
    export VISUAL=vim
fi

# Nice hack for adapting the vimruntime in dependence of the vim version
export VIMVERSION=`vim --version|grep "^VIM"|cut -d " " -f5 | sed 's/\.//'`
if [[ -z "/usr/local/share/vim$VIMVERSION" ]] then
    export VIMRUNTIME=/usr/local/share/vim/vim$VIMVERSION
else 
    export VIMRUNTIME=/usr/share/vim/vim$VIMVERSION
fi

export MAIL=mail@kalkin.de
export PGPPATH=$HOME/.gnupg
export SLRNPULL_ROOT=$HOME/Documents/usenet/albasani
export NNTPSERVER='snews.albasani.net'


export LANG="de_DE.utf8"
export LC_TIME="de_DE.utf8"
export LC_MESSAGES="en_US.utf8"

if [[ $(uname -m) = 'ppc' ]] then
    export JAVA_HOME=/usr/lib/j2sdk1.6-ibm/
fi

# some variables for specific systems
if [[ $(uname -s) = 'OpenBSD' ]] then
    export PKG_PATH='ftp://ftp.freenet.de/pub/ftp.openbsd.org/pub/OpenBSD/4.2/packages/i386/'
    export CVSROOT=anoncvs@openbsd.spline.de:/cvs
fi

if [[ $(uname -s) == 'Darwin' ]] then
	test -r /sw/bin/init.sh && . /sw/bin/init.sh 
    export LANG="en_US.UTF-8"
    export LC_MESSAGES="en_US.UTF-8"
fi

if [[ -x `where most` ]]; then
    export PAGER=most;
elif [[ -x `where less` ]]; then
    export PAGER=less;
elif [[ -x `where more` ]]; then
    export PAGER=more;
fi

